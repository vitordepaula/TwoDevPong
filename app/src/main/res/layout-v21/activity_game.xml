<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:background="#000096"
    android:id="@+id/anchorView"
    tools:context="br.neatfire.twodevpong" >

    <ImageView
        android:layout_width="30sp"
        android:layout_height="12sp"
        android:id="@+id/game_ball_shadow"
        android:background="#000064"
        android:visibility="invisible"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="70sp"
        android:layout_marginTop="5sp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/game_ball"
        android:src="@drawable/arkanoid_ball"
        android:elevation="5sp"
        android:visibility="invisible"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="70sp"
        android:layout_marginTop="100sp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/game_bar"
        android:src="@drawable/arkanoid_bar"
        android:elevation="5sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="70dp"
        android:layout_marginBottom="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/game_score"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:textSize="30sp"
        android:layout_below="@+id/game_ball_shadow"
        android:layout_centerHorizontal="true" />

</RelativeLayout>